env:
  browser: true
  es6: true

parserOptions:
  ecmaFeatures:
    jsx: true

parser: "babel-eslint"

plugins:
  - babel
  - react

extends:
  "airbnb/base"

rules:
  one-var-declaration-per-line: 0
  no-unused-vars: 0
  comma-dangle: 0
  consistent-return: 0
  arrow-body-style: 0
  no-return-assign: 0
  max-len: 0
  func-names: 0
  one-var: 0
  camelcase: 0
  indent: 0
  no-unused-expressions: [2, { allowTernary: true, allowShortCircuit: true }]
  babel/generator-star-spacing: 1
  babel/object-curly-spacing: [2, "always"]
  babel/object-shorthand: 1
  babel/arrow-parens: 0
  babel/no-await-in-loop: 1
